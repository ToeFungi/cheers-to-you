{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "sources": [
    "src/*",
    "images/*",
    "res/*"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "name": "es5-bundled",
      "js": {
        "minify": true,
        "compile": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true
    }
  ]
}
